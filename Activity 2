#include <iostream>

using namespace std;
int main()

{

int month, day, year;
cout<<"Enter Month: ";
cin>> month;
cout<<"Enter Day: ";
cin>> day;
cout<<"Enter Year: ";
cin>> year;

if (month ==1)
    cout<<"January ";
else if (month==2)
    cout<< "February ";
else if (month==3)
    cout<<"March ";
else if (month==4)
    cout<<"April ";
else if (month==5)
    cout<<"May ";
else if (month==6)
    cout<<"June ";
else if (month==7)
    cout<<"July ";
else if (month==8)
    cout<<"August ";
else if (month==9)
    cout<<"September ";
else if (month==10)
    cout<<"October ";
else if (month==11)
    cout<<"November ";
else if (month==12)
    cout<<"December ";
else if (month>12)
    cout<<"Invalid input"<<endl;          
else if(month<=12 && month >= 1) 
    cout<< "The month is "<< month ;

if(day <=31 && day >= 1)
    cout<< day << "," << year;
else
    cout<<"Invalid input"<<endl;       

return 0;

}
